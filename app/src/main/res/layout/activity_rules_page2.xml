<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RulesPage2Activity"
    android:background="@color/sky_blue">

    <ImageView
        android:id="@+id/backgroundForRules"
        android:layout_width="534dp"
        android:layout_height="852dp"
        android:alpha=".7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.504"
        app:srcCompat="@drawable/background9applesmorris" />

    <ImageView
        android:id="@+id/exampleBoardRulesPage2"
        android:layout_width="407dp"
        android:layout_height="355dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/boardforrulespage2" />

    <TextView
        android:id="@+id/information2Page2"
        android:layout_width="375dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/carter_one"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="7"
        android:text="When you create one, you can remove one of your opponent’s apple from the tree, if it isn’t in a branch of apples already. "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/information1Page2" />

    <Button
        android:id="@+id/nextButtonForRulesPage2"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/redapple"
        android:fontFamily="@font/carter_one"
        android:onClick="toPage3OfRules"
        android:text="\nNext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/rulesTitlePage"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rulestext" />

    <TextView
        android:id="@+id/information1Page2"
        android:layout_width="375dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/carter_one"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="7"
        android:text="The objective of the game is to create branches of apples, vertical or horizontal “branches” that contain three pieces of your apple in a row. "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rulesTitlePage" />

    <ImageButton
        android:id="@+id/backButtonRulesPage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/backbutton"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:onClick="toPage1OfRules"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>